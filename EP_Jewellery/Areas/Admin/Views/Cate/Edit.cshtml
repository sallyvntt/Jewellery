@model EP_Jewellery.Models.CatMst
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">Edit Category</div>
        <div class="card-body card-block">
            <form asp-action="Edit">


                <div class="form-group">
                    <div class="input-group">

                        <div class="input-group-addon">Cat_ID</div>
                        <input type="text" asp-for="Cat_ID" id="Cat_ID" name="Cat_ID" class="form-control" readonly>

                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Cat_Name</div>
                        <input asp-for="Cat_Name" type="text" id="Cat_Name" name="Cat_Name" class="form-control">
                        <div class="input-group-addon">
                        </div>
                    </div>
                </div>

                <div class="form-actions form-group">
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </div>
            </form>
        </div>
    </div>

</div>
